<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recycler_view_product_characteristic"
    android:layout_width="wrap_content"
    android:layout_height="100dp"
    android:background="#000000"
    android:paddingLeft="15dp"
    android:paddingTop="10dp"
    android:paddingRight="15dp"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/product_charac_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Platform"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/product_charac_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GOG.COM"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/product_charac_img"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/product_charac_value"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/product_charac_name"
        app:srcCompat="@drawable/usa" />
</androidx.constraintlayout.widget.ConstraintLayout>